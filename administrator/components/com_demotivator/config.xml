<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="COM_DEMOTIVATOR_COMPONENT_LABEL"
		description="COM_DEMOTIVATOR_COMPONENT_DESC"
	>

    <field name="jquery_on"
         type="radio"
         default="1"
         label="COM_DEMOTIVATOR_JQOUERY_ON"
         description="COM_DEMOTIVATOR_JQOUERY_ON_DESC">
             <option value="0">JOFF</option>
             <option value="1">JON</option>
     </field>
    
     <field name="premoderate"
         type="radio"
         default="1"
         label="COM_DEMOTIVATOR_PREMODERATE_ON"
         description="COM_DEMOTIVATOR_PREMODERATE_ON_DESC">
             <option value="0">JOFF</option>
             <option value="1">JON</option>
     </field>
     
     <field name="types"
         type="text"
         default="Demotivator|demotiv|00000;Motivator|motiv|0078F0;Blondy style|blondy|EE1DB6"
         label="COM_DEMOTIVATOR_TYPES_CONFIG"
         size="100"
         description="COM_DEMOTIVATOR_TYPES_CONFIG_DESC" />
    
    <field name="copyright"
         type="text"
         default="fonclub-blog.ru"
         label="COM_DEMOTIVATOR_COPY_CONFIG"
         size="50"
         description="COM_DEMOTIVATOR_COPY_CONFIG_DESC" />
         
    <field name="adminemail"
         type="text"
         default="admin@site.com"
         label="COM_DEMOTIVATOR_EMAIL_CONFIG"
         size="50"
         description="COM_DEMOTIVATOR_EMAIL_CONFIG_DESC" />
         
    <field name="color" type="color"
            label="COM_DEMOTIVATOR_FORM_COLOR"
            description="COM_DEMOTIVATOR_FORM_COLOR_DESC" />
    
    <field name="pagelist" type="text"
            label="COM_DEMOTIVATOR_CONFIG_PAGELIST"
            default="9"
            description="COM_DEMOTIVATOR_CONFIG_PAGELIST_DESC" />
    
    <field name="font" type="filelist" hide_none="true" hide_default="true"
        default="font.ttf" label="COM_DEMOTIVATOR_CONFIG_FONT" 
        description="COM_DEMOTIVATOR_CONFIG_FONT_DESC" directory="components/com_demotivator/assets/fonts" 
        filter="" exclude="index.html" stripext="" />

	</fieldset>

	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field name="rules" type="rules"
			component="com_demotivator"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>

</config>
