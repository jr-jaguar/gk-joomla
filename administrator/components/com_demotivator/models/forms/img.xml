<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

       <field name="id" type="text" default="0" label="COM_DEMOTIVATOR_FORM_LBL_IMG_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text"                
            label="COM_DEMOTIVATOR_FORM_LBL_IMG_NAME"
            description="COM_DEMOTIVATOR_FORM_DESC_IMG_NAME" 
            required="true" 
            filter="safehtml" /> 

       <field name="created_by" type="user" default="" 
            label="COM_DEMOTIVATOR_FORM_LBL_IMG_CREATED_BY"
            description="COM_DEMOTIVATOR_FORM_DESC_IMG_CREATED_BY"  /> 

        <field name="type" type="type"
            label="COM_DEMOTIVATOR_FORM_TYPE"
            description="COM_DEMOTIVATOR_FORM_DESC_TYPE" /> 
        
        <field name="filter_type" type="type"
            label="COM_DEMOTIVATOR_FORM_TYPE"
            description="COM_DEMOTIVATOR_FORM_DESC_TYPE" onchange="this.form.submit();" />   

       <field name="created" type="timecreated" default="" 
            label="COM_DEMOTIVATOR_FORM_LBL_IMG_CREATED"
            description="COM_DEMOTIVATOR_FORM_DESC_IMG_CREATED"  /> 

       <field name="alias" type="text"                
            label="COM_DEMOTIVATOR_FORM_LBL_IMG_ALIAS"
            description="COM_DEMOTIVATOR_FORM_DESC_IMG_ALIAS"               
            filter="safehtml" /> 

       <field name="img" type="media"                
            label="COM_DEMOTIVATOR_FORM_LBL_IMG_IMG"
            description="COM_DEMOTIVATOR_FORM_DESC_IMG_IMG"
            required="true" 
            filter="raw"
            directory="com_demotivator" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
